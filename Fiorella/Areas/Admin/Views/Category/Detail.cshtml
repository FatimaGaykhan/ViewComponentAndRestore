@model Category
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Category</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Product Count</th>

                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.CreatedDate.ToString("MM.dd.yyyy")</td>
                    <td>@Model.Products.Count</td>
                </tr>

            </tbody>
        </table>

        @foreach (var item in Model.Products)
        {
            <div class="card">
                <img class="card-img-top" style="width: 200px;" src="~/img/@item.ProductImages.FirstOrDefault(m=>m.IsMain)?.Name" alt="">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.Price</p>
                    <p class="card-text"><small class="text-muted">@item.CreatedDate.ToString("MM.dd.yyyy")</small></p>
                </div>
            </div>

        }
