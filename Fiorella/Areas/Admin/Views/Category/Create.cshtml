@model CategoryCreateVM
<div class="container">

    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">Vertical Form</div>
                    <hr>
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label for="input-1">Category</label>
                            <input asp-for="Name" class="form-control" id="input-1" maxlength="100" placeholder="Category ...">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group">
                            <button type="submit" class="btn btn-light px-5"> Submit</button>
                            <a class="btn btn-light px-5" asp-action="Index"> Cancel</a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div><!--End Row-->
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->

</div>

